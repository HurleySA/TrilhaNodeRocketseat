    "paths":{
        "/categories":{
             "post":{
                 "tags": ["Category"],
                 "summary":"Create a category",
                 "description": "Create a new Category",
                 "requestBody": {
                     "content": {
                         "application/json":{
                             "schema": {
                                 "type": "object",
                                 "properties": {
                                     "name": {
                                         "type": "string"
                                     },
                                     "description": {
                                        "type": "string"
                                    }
                                 }
                             },
                             "example":{
                                 "name": "Category name",
                                 "description": "Category description"
                             }
                         }
                     }
                 },
                 "responses": {
                     "201":{
                         "description": "Created"
                     },
                     "500":{
                         "description": "Category already Exist"
                     }
                 }
                 
             },
             "get":{
                "tags": ["Category"],
                "summary":"List all categories",
                "description": "List all categories",
                "responses":{
                    "200": {
                        "description":"Sucess",
                        "content": {
                            "application/json":{
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type":"object",
                                        "properties":{
                                            "name": {
                                                "type": "string"
                                            },
                                            "description": {
                                               "type": "string"
                                           }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
             }
        }
    }
